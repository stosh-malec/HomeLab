#All Aliases
alias c='clear'
alias k='kubectl'
alias kgap='k get pods -A'
alias kgan='k get nodes'  
alias kl='k get logs'     
alias kd='k describe'   
alias gc='git commit -m'
alias gca='git add * && git commit -m' 
alias gs='git status'
alias gpull='git pull' 
alias gpush='git push'  
alias g='git'
alias ga='git add *'
alias gd='git diff' 
alias gstash='git stash'
alias tga='tg apply'
alias tgp='tg plan' 
alias home='kubectl config use-context home'
alias krh="kubectl rollout restart deployment"
alias krs="kubectl rollout restart statefulset"
alias krd="kubectl rollout restart daemonset"
alias showalias="grep '^alias' ~/.zshrc || grep '^alias' ~/.bashrc"
